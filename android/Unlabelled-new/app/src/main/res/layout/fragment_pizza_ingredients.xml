<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".PizzaIngredientsFragment"
        tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/ttv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your ingredients"
        android:textSize="24dp"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/ingredients"
        android:layout_below="@id/ttv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/olives"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/olivesbw"
            android:contentDescription="aaaa" />
        <ImageButton
            android:id="@+id/onion"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/onionbw"
            android:contentDescription="aaaa" />
        <ImageButton
            android:id="@+id/cheese"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/cheesebw"
            android:contentDescription="aaaa" />
        <ImageButton
            android:id="@+id/pep"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/pepperonibw"
            android:contentDescription="aaaa"/>
        <ImageButton
            android:id="@+id/tomato"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/tomatobw"
            android:contentDescription="aaaa" />
        <!--48dp x 48dp-->
        <!--ImageButtons-->
    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textSize="24sp"/>

    <!-- Confirm button full width -->


</RelativeLayout>